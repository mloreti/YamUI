{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "./config"
  ]
}
